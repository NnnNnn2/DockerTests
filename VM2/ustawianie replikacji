# Na VM2: Wejdź do kontenera MySQL Mastera
docker exec -it mysql_master mysql -u root -ptoor

-- Uruchom w konsoli MySQL na VM2
-- Utwórz usera dla drugiej bazy
CREATE USER 'repl_user'@'IP_VM3' IDENTIFIED WITH mysql_native_password BY 'repl_password';
GRANT REPLICATION SLAVE ON *.* TO 'repl_user'@'IP_VM3';
FLUSH PRIVILEGES;

-- Utwórz usera dla ProxySQL
CREATE USER 'monitor'@'192.168.100.4' IDENTIFIED WITH mysql_native_password BY 'monitor';
GRANT PROCESS, REPLICATION CLIENT ON *.* TO 'monitor'@'192.168.100.4';
FLUSH PRIVILEGES;

-- Uruchom w konsoli MySQL na VM2
FLUSH TABLES WITH READ LOCK;
SHOW MASTER STATUS;

Zanotuj te wartości:

    File: (np. mysql-bin.000003)

    Position: (np. 678)

-- Uruchom w konsoli MySQL na VM2
UNLOCK TABLES;
exit
